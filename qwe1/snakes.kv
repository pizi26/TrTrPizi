<SnakesGame>:
    snake1: snake1
    snake2: snake2
    status_bar: status_bar
    lbl: my_label
    Snake:
        id: snake1
        center_x: self.parent.width / 3.
        center_y: self.parent.height / 2.
        color: 1, 1, 1, 1

        canvas.before:
            Color:
                rgba: self.color

    Snake:
        id: snake2
        center_x: self.parent.width * 2/3.
        center_y: self.parent.height / 2.
        color: 1, 0, 191/255., 1

        canvas.before:
            Color:
                rgba: self.color

    StatusBar:
        id: status_bar

        ScoreLabel:
            text: str(snake1.score)
            color: snake1.color

        ScoreLabel:
            text: str(snake2.score)
            color: snake2.color

    
    
    Widget:

	Button:
	    text: 'CLicke me'
	    on_press: root.btn_press()
	
	Label:
	    id: my_label
	    text: ''


<Snake>:
    width:
        self.parent.width / 40. \
        if self.parent.width < self.parent.height \
        else self.parent.height / 40.
    height: self.width

    canvas.after:
        Rectangle:
            size: self.size
            pos: self.pos


<Trail>:
    canvas:
        Color:
            rgba: self.color
        Rectangle:
            size: self.size
            pos: self.pos


<StatusBar>:
    width: self.parent.width
    height:
        self.parent.height / 20. \
        if self.parent.height / 20. > 10 \
        else 10
    top: self.parent.height

    canvas:
        Color:
            rgba: 0.15, 0.15, 0.15, 1
        Rectangle:
            size: self.size
            pos: self.pos

    canvas.after:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Line:
            points: self.center_x, self.top-dp(1), self.center_x, self.y+dp(2)
            width: dp(2)
            cap: 'none'


<ScoreLabel@Label>:
    font_size: self.height

    canvas:
        Color:
            rgba: self.color
        Line:
            rectangle:
                (self.x+dp(1), self.y+dp(1),
                self.width-dp(1), self.height-dp(1))
            width: dp(1)

